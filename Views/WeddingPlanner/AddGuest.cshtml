<div class="text-center container">
  <h1>Add Guest</h1>
  @model Guest
  <form
    asp-action="AddGuest"
    asp-route-WedId="@ViewBag.WeddingId"
    method="POST"
  >
    <input type="hidden" asp-for="WeddingId" value="@ViewBag.WeddingId" />
    <input type="hidden" asp-for="ReceivedInvite" value="false" />
    <input type="hidden" asp-for="HasRSVP" value="false" />
    <p><span style="color: red;">@ViewBag.AddGuestError</span></p>
    <table class="table table-light">
      <tr>
        <td>First Name(Optional)</td>
        <td><input asp-for="FirstName" /></td>
      </tr>
      <tr>
        <td>Last Name(Optional)</td>
        <td><input asp-for="LastName" /></td>
      </tr>
      <tr>
        <td>Guest Email</td>
        <td><input asp-for="Email" /></td>
      </tr>
      <tr>
        <td></td>
        <td><button class="btn btn-primary" type="submit">Add</button></td>
      </tr>
    </table>
  </form>
</div>
